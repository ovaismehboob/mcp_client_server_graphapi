# Auto detect text files and perform line-ending normalization
* text=auto

# C# files
*.cs text diff=csharp

# Razor files
*.razor text

# JSON files
*.json text

# PowerShell files
*.ps1 text eol=crlf

# Markdown files
*.md text

# Visual Studio
*.sln text eol=crlf
*.csproj text eol=crlf
*.vbproj text eol=crlf
*.fsproj text eol=crlf
*.dbproj text eol=crlf

# Binary files
*.dll binary
*.exe binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.7z binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
